<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddItems"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/title"
        android:textSize="25dp"
        android:text=" Choose a image:"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/imgBullet"
        android:src="@drawable/bullet"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>
    <ImageView
        android:id="@+id/imgRefrigerator"
        android:src="@drawable/refrigerator"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toEndOf="@id/imgBullet"
        app:layout_constraintTop_toBottomOf="@id/title"/>
    <ImageView
        android:id="@+id/imgPolo"
        android:src="@drawable/polo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintStart_toEndOf="@id/imgRefrigerator"
        app:layout_constraintTop_toBottomOf="@id/title"/>
    <ImageView
        android:id="@+id/imgActiva"
        android:src="@drawable/activa"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgBullet"
        />
    <ImageView
        android:id="@+id/imgOven"
        android:src="@drawable/oven"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/imgActiva"
        app:layout_constraintTop_toBottomOf="@id/imgRefrigerator"/>
    <ImageView
        android:id="@+id/imgPrinter"
        android:src="@drawable/printer"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/imgOven"
        app:layout_constraintTop_toBottomOf="@id/imgPolo"/>
    <EditText
        android:id="@+id/itemPrice"
        android:hint="00000"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="50dp"
        android:text="Price :"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgActiva"/>
    <EditText
        android:id="@+id/itemDescription"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="Description :"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/itemPrice"/>
    <EditText
        android:id="@+id/itemCity"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="City :"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/itemDescription"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="100dp"
        android:text="OK"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemCity"/>


</androidx.constraintlayout.widget.ConstraintLayout>