<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background= "#808080">
    <TextView
        android:id="@+id/title"
        android:textSize="25dp"
        android:text=" Choose a image:"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/bullet"
        android:src="@drawable/bullet"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>
    <ImageView
        android:id="@+id/refrigerator"
        android:src="@drawable/refrigerator"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toEndOf="@id/bullet"
        app:layout_constraintTop_toBottomOf="@id/title"/>
    <ImageView
        android:id="@+id/polo"
        android:src="@drawable/polo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintStart_toEndOf="@id/refrigerator"
        app:layout_constraintTop_toBottomOf="@id/title"/>
    <ImageView
        android:id="@+id/activa"
        android:src="@drawable/activa"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bullet"
        />
    <ImageView
        android:id="@+id/oven"
        android:src="@drawable/oven"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/activa"
        app:layout_constraintTop_toBottomOf="@id/refrigerator"/>
    <ImageView
        android:id="@+id/printer"
        android:src="@drawable/printer"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/oven"
        app:layout_constraintTop_toBottomOf="@id/polo"/>
    <EditText
        android:id="@+id/itemPrice"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="50dp"
        android:hint="Price"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/activa"/>
    <EditText
        android:id="@+id/itemDescription"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:hint="Description"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/itemPrice"/>
    <EditText
        android:id="@+id/itemCity"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:hint="City"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/itemDescription"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="120dp"
        android:text="SAVE"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemCity"/>


</androidx.constraintlayout.widget.ConstraintLayout>